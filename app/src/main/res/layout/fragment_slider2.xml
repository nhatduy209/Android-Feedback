<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart2"
        android:layout_width="212dp"
        android:layout_height="192dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintEnd_toEndOf="@+id/txtModuleNameStatistic"
        app:layout_constraintTop_toBottomOf="@+id/txtModuleNameStatistic" />

    <TextView
        android:id="@+id/txtTitle5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="4dp"
        android:text="Feedback Statistic of Class"
        app:layout_constraintEnd_toEndOf="@+id/txtTitle6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtModuleNameStatistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txtModuleNameStatistic"
        android:textSize="14dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtTitle6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTitle6" />

    <TextView
        android:id="@+id/txtClassNameStatistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:text="txtClassName"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/txtModuleNameStatistic"
        app:layout_constraintStart_toStartOf="@+id/txtModuleNameStatistic" />

    <TextView
        android:id="@+id/txtTitle6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="2dp"
        android:text="Feedback Statistic of Module"
        app:layout_constraintEnd_toStartOf="@+id/txtModuleNameStatistic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle5" />

</androidx.constraintlayout.widget.ConstraintLayout>